<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/black"    android:orientation="vertical">    <RelativeLayout        android:id="@+id/bar"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="3">        <com.android.mybarometer.DashboardView            android:id="@+id/barometerPanelView"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_gravity="center" />    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="2"        android:gravity="center_horizontal"        android:orientation="vertical">        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:id="@+id/barometer_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingTop="20dp"                android:paddingBottom="30dp"                android:text="@string/barometerValue"                android:textColor="@color/white"                android:textSize="22sp" />            <TextView                android:id="@+id/barometer_value"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingTop="20dp"                android:paddingBottom="30dp"                android:text=" 0 hPa"                android:textColor="@color/white"                android:textSize="22sp" />        </LinearLayout>        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:id="@+id/altitude_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingBottom="30dp"                android:text="@string/altitudeValue"                android:textColor="@color/white"                android:textSize="22sp" />            <TextView                android:id="@+id/altitude_value"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingBottom="30dp"                android:text=" 0 m"                android:textColor="@color/white"                android:textSize="22sp" />        </LinearLayout>        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:id="@+id/temperature_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingBottom="15dp"                android:text="@string/temperatureValue"                android:textColor="@color/white"                android:textSize="22sp" />            <TextView                android:id="@+id/temperature_value"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingBottom="15dp"                android:text=" 0 Â°C"                android:textColor="@color/white"                android:textSize="22sp" />        </LinearLayout>        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:id="@+id/delete_check"                android:layout_width="wrap_content"                android:layout_height="60dp"                android:gravity="center"                android:paddingStart="25dp"                android:paddingEnd="25dp"                android:text="@string/deleteCheck"                android:textColor="@color/white"                android:textSize="15sp" />            <TextView                android:id="@+id/altitude_check"                android:layout_width="wrap_content"                android:layout_height="60dp"                android:gravity="center"                android:paddingStart="25dp"                android:paddingEnd="25dp"                android:text="@string/altitudeCheck"                android:textColor="@color/white"                android:textSize="15sp" />        </LinearLayout>    </LinearLayout></LinearLayout>